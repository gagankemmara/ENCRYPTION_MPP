function plaintext = AES_DECRYPT_MODULE(ciphertext, secret_key)
    % AES-128 Decryption of a 4x4 uint8 ciphertext matrix using a 16-byte key

    %% --- Constants ---
    Nb = 4;  % block size (4 words = 16 bytes)
    Nr = 10; % number of rounds for AES-128
    Nk = 4;  % key length (4 words = 16 bytes)

    % Inverse S-Box
    inv_sbox = get_inv_sbox();

    %% --- Key Expansion ---
    round_keys = key_expansion(secret_key);

    %% --- Initial AddRoundKey ---
    state = uint8(ciphertext);
    state = bitxor(state, round_keys(:, :, Nr + 1));

    %% --- Main Rounds ---
    for round = Nr-1:-1:1
        state = inv_shift_rows(state);
        state = inv_sub_bytes(state, inv_sbox);
        state = bitxor(state, round_keys(:, :, round + 1));
        state = inv_mix_columns(state);
    end

    %% --- Final Round (no inv_mix_columns) ---
    state = inv_shift_rows(state);
    state = inv_sub_bytes(state, inv_sbox);
    state = bitxor(state, round_keys(:, :, 1));

    %% --- Output ---
    plaintext_bytes = reshape(state, 1, []);
    plaintext = char(plaintext_bytes);
end

%% ================= Helper Functions ================= %%

function inv_sbox = get_inv_sbox()
    sbox = get_sbox();
    inv_sbox = zeros(1, 256, 'uint8');
    for i = 0:255
        inv_sbox(double(sbox(i+1)) + 1) = i;
    end
end

