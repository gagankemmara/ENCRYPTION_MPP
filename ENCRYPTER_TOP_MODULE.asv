function round_keys = key_expansion(key)
    sbox = get_sbox();
    key = uint8(key);
    Nk = 4; Nb = 4; Nr = 10;
    key_schedule = reshape(key, 4, Nk);
    round_keys = zeros(4, Nb, Nr+1, 'uint8');
    round_keys(:, :, 1) = key_schedule;

    Rcon = uint8([1 0 0 0]);
    for i = Nk+1:Nb*(Nr+1)
        temp = key_schedule(:, i-1);
        if mod(i, Nk) == 1
            temp = bitxor(sub_bytes(circshift(temp, -1), sbox), Rcon');
            Rcon(1) = gf_mult(Rcon(1), 2);
        end
        key_schedule(:, i) = bitxor(key_schedule(:, i-Nk), temp);
    end

    for r = 1:Nr+1
        round_keys(:,:,r) = key_schedule(:, (r-1)*Nb+1 : r*Nb);
    end
end

function out = sub_bytes(state, sbox)
    out = arrayfun(@(x) sbox(double(x)+1), state);
end

function out = inv_sub_bytes(state, inv_sbox)
    out = arrayfun(@(x) inv_sbox(double(x)+1), state);
end

function out = shift_rows(state)
    out = state;
    for r = 2:4
        out(r,:) = circshift(out(r,:), -(r-1));
    end
end

function out = inv_shift_rows(state)
    out = state;
    for r = 2:4
        out(r,:) = circshift(out(r,:), r-1);
    end
end

function out = mix_columns(s)
    out = zeros(size(s), 'uint8');
    for c = 1:4
        a = s(:,c);
        out(:,c) = [
            bitxor(bitxor(gf_mult(a(1),2), gf_mult(a(2),3)), bitxor(a(3), a(4)))
            bitxor(bitxor(a(1), gf_mult(a(2),2)), bitxor(gf_mult(a(3),3), a(4)))
            bitxor(bitxor(a(1), a(2)), bitxor(gf_mult(a(3),2), gf_mult(a(4),3)))
            bitxor(bitxor(gf_mult(a(1),3), a(2)), bitxor(a(3), gf_mult(a(4),2)))
        ];
    end
end

function out = inv_mix_columns(s)
    out = zeros(size(s), 'uint8');
    for c = 1:4
        a = s(:,c);
        out(:,c) = [
            bitxor(bitxor(bitxor(gf_mult(a(1),14), gf_mult(a(2),11)), gf_mult(a(3),13)), gf_mult(a(4),9))
            bitxor(bitxor(bitxor(gf_mult(a(1),9), gf_mult(a(2),14)), gf_mult(a(3),11)), gf_mult(a(4),13))
            bitxor(bitxor(bitxor(gf_mult(a(1),13), gf_mult(a(2),9)), gf_mult(a(3),14)), gf_mult(a(4),11))
            bitxor(bitxor(bitxor(gf_mult(a(1),11), gf_mult(a(2),13)), gf_mult(a(3),9)), gf_mult(a(4),14))
        ];
    end
end

function r = gf_mult(a, b)
    r = uint8(0);
    for i = 0:7
        if bitand(b, bitshift(1,i))
            r = bitxor(r, bitshift(a,i));
        end
    end
    for i = 15:-1:8
        if bitget(r, i+1)
            r = bitxor(r, bitshift(hex2dec('1b'), i-8));
        end
    end
end



